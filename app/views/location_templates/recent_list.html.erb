<h1>Recent Thought Spots</h1>



<table>
  <tr>
    <th>Location Name</th>
    <th>Ambience</th>
    <th>Noise Level</th>
    <th>Internet Quality</th>
    <th>Plug Availability</th>
    <th>Neighborhood</th>
  </tr>
  
   <% @recent.each do |spot| %>
  <tr>
    <td>
      <%= spot.address.name %>
    </td>

    <td>
      <%= spot.ambience.description %>
    </td>

    <td>
      <%= spot.noise_level.level %>
    </td>

    <td>
      <%= spot.internet_quality.quality %>
    </td>

    <td>
      <%= spot.plug_availability.availability %>
    </td>

    <td>
      <%= spot.location.name %>
    </td>
  </tr>
  <% end %>
</table>
